<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/CustomTabTexStyle</item>
    </style>

    <style name="CustomTabTexStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="CupTitle">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CupList">
        <item name="android:scrollbars">none</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CupListEmpty">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="CupMatchTeamTitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CupMatchPrediction">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="CupMatchFinal">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="CupMatchScore">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="PredictionDialogTeamTitle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="PredictionDialogScore">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:hint">@string/prediction_dialog_score_hint</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:digits">0123456789</item>
        <item name="android:maxLength">2</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
